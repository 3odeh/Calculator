<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00073C">

    <ImageButton
        android:id="@+id/SquareIcon"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:background="@drawable/bachg_btn"
        android:backgroundTintMode="add"
        android:hapticFeedbackEnabled="true"
        android:onClick="SquareBtn"
        android:src="@drawable/square_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@drawable/square_btn" />

    <EditText
        android:id="@+id/SideEditText_Square"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/box_layout"
        android:backgroundTint="#5C6FD8"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/AreaTextView_Square"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/box_layout"
        android:backgroundTint="#5C6FD8"
        android:freezesText="true"
        android:gravity="left|center_vertical"
        android:text="@string/area"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SideEditText_Square" />

    <TextView
        android:id="@+id/PerimeterTextView_Square"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/box_layout"
        android:backgroundTint="#5C6FD8"
        android:freezesText="true"
        android:gravity="left|center_vertical"
        android:text="@string/perimeter"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AreaTextView_Square" />

    <Button
        android:id="@+id/CalculateBtn_Square"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/circle"
        android:backgroundTint="#5C6FD8"
        android:elegantTextHeight="true"
        android:freezesText="true"
        android:inputType="none"
        android:onClick="CalculateBtn_Square"
        android:text="@string/calculate"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PerimeterTextView_Square" />

    <TextView
        android:id="@+id/SideTextView_Square"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/box_layout"
        android:backgroundTint="#5C6FD8"
        android:freezesText="true"
        android:gravity="center"
        android:text="@string/side"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteY="29dp" />

</androidx.constraintlayout.widget.ConstraintLayout>